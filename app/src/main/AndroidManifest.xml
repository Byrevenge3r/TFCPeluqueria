<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.WRITE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />

    <application
        android:name=".utils.MiApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PeluqueriaCanina">
        <activity
            android:name=".veterinaria.MapaVeterinariasActivity"
            android:exported="true">

        </activity>
        <activity
            android:name=".VerPerfilActivity"
            android:exported="false" />
        <activity
            android:name=".ChatActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustResize|stateAlwaysHidden">

        </activity>
        <activity
            android:name=".peluqueria.VerDatosTusCitasActivity"
            android:exported="true" />
        <activity
            android:name=".NoticiasActivity"
            android:exported="false" />
        <activity
            android:name=".tienda.TiendaDetallesActivity"
            android:exported="false" />
        <activity
            android:name=".tienda.Tienda2Activity"
            android:exported="false" />
        <activity
            android:name=".tienda.TiendaActivity"
            android:exported="false" />
        <activity
            android:name=".peluqueria.VerTusCitasActivity"
            android:exported="true"></activity>
        <receiver android:name=".notificacion.Recordatorio"/>
        <receiver
            android:name=".utils.SmsListener"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />

        <activity
            android:name=".peluqueria.UbicacionTiempoRealActivity"
            android:exported="false"
            android:label="@string/title_activity_ubicacion_tiempo_real" />
        <activity
            android:name=".peluqueria.DatosAnimalActivity"
            android:exported="false" />
        <activity
            android:name=".veterinaria.VeterinariaActivity"
            android:exported="true" >

        </activity>
        <activity
            android:name=".peluqueria.RegistrarAnimal"
            android:exported="true" >

        </activity>
        <activity
            android:name=".peluqueria.PeluqueriaActivity"
            android:exported="false" />
        <activity
            android:name=".registro.Registro4"
            android:exported="false" />
        <activity
            android:name=".registro.Registro5"
            android:exported="true" />
        <activity
            android:name=".registro.Registro3"
            android:exported="false" />
        <activity
            android:name=".registro.Registro2"
            android:exported="false" />
        <activity
            android:name=".registro.Registro1"
            android:exported="false" />
        <activity
            android:name=".registro.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"></activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.peluqueriacanina.mycamera.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
        <service android:name=".notificacion.Recordatorio" android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"></action>
            </intent-filter>
        </service>
    </application>

</manifest>