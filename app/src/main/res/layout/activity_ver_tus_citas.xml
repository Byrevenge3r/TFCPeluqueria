<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainActivity.peluqueria.citas.VerTusCitasActivity"
    android:background="@color/color_principal_citas">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvVerTusCitas"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layoutAnimation="@anim/layout_animacion"
        android:layout_height="590dp"/>

    <TextView
        android:id="@+id/tvNoHayCitasVTC"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/tv_no_hay_citas"
        android:textSize="32sp"
        android:visibility="invisible" />

    <android.widget.Button
        android:id="@+id/btnCancelarCita"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/fondo_btn"
        android:text="@string/btn_cancelar_cita"
        android:textColor="@color/color_blanco"
        android:visibility="invisible" />

</RelativeLayout>