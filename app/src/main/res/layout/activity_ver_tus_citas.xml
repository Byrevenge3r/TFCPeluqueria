<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerTusCitasActivity"
    android:background="@color/color_principal_citas">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvVerTusCitas"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layoutAnimation="@anim/layout_animacion"
        android:layout_height="660dp"/>

    <TextView
        android:id="@+id/tvNoHayCitasVTC"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tv_no_hay_citas"
        android:textSize="32sp"
        android:gravity="center"
        android:visibility="invisible"
        />

    <android.widget.Button
        android:id="@+id/btnCancelarCita"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:text="@string/btn_cancelar_cita"
        android:background="@drawable/fondo_btn"
        android:visibility="invisible"
        android:layout_marginBottom="10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>