<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatActivity"
    android:background="@color/color_principal_citas"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/rlChat"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/color_principal"/>

    <ImageButton
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/ibLogoChat"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/logo_peluqueria"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvChatUsuario"
            app:layout_constraintTop_toBottomOf="@id/rlChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    <LinearLayout
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etChat"
            android:layout_width="340dp"
            android:layout_height="52dp"
            android:hint="@string/et_chat"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"/>

        <ImageButton
            android:id="@+id/btnEnviar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/fondo_btn_chat"
            android:textAllCaps="false"
            android:textColor="@color/color_texto_blanco"
            android:src="@drawable/enviar_chat"
            app:shapeAppearanceOverlay="@style/Circular"
            app:strokeColor="@color/color_blanco"
            android:scaleType="centerCrop"
            app:strokeWidth="3dp"
            android:layout_marginBottom="10dp"/>



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>