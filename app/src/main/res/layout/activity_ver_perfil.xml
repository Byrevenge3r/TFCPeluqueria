<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerPerfilActivity"
    android:background="@color/color_principal_citas">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clFondoIv"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:background="@drawable/fondo_perfil">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivPerfilPel"
            android:layout_width="153dp"
            android:layout_height="153dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/foto_perfil"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/Circular"
            app:strokeColor="@color/color_blanco"
            android:scaleType="centerCrop"
            app:strokeWidth="1dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/etUsuarioPer"
        app:layout_constraintTop_toBottomOf="@id/clFondoIv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="300dp"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/etCorreoPer"
        app:layout_constraintTop_toBottomOf="@id/etUsuarioPer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="300dp"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>
