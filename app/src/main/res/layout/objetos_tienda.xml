<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_producto_tienda"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="6dp"
        android:padding="9dp"
        android:src="@drawable/background_tienda"
        android:background="@color/color_principal_citas"
        android:foreground="?attr/selectableItemBackground"/>
    <TextView
        android:id="@+id/tv_objeto_nombre_tienda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:layout_below="@id/image_producto_tienda"
        android:text="@string/piensos"
        android:textColor="@color/black"/>
</RelativeLayout>